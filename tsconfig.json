{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "allowJs": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
      "types"
    ],
    "sourceMap": true,
    "outDir": "dist",
    // "strict": true,
    "lib": [
      "ESNext"
    ],
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "declaration": true
  },
  "include": [
    "./src/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules",
    "test/**/*"
  ],
}