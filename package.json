{
  "name": "esbuild-template",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "type": "module",
  "bin": {},
  "types": "dist/types/index.d.ts",
  "scripts": {
    "dev": "nodemon",
    "build": "esbuild src --bundle --minify --outfile=dist/index.js --platform=node --target=node14 --declaration",
    "start": "nodemon dist/index.js",
    "test": "npx vitest",
    "test:ui": "npx vitest --ui",
    "watch": "esbuild src/**/* --outdir=dist/index.js --bundle --minify --comments=external --platform=node --target=es2020 --watch",
    "watch:start": "npx concurrently \"esbuild ./src/index.ts --outdir=dist --watch\" \"nodemon dist/index.js\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^18.15.1",
    "@vitest/ui": "^0.29.2",
    "esbuild": "^0.17.11",
    "esbuild-node-tsc": "^2.0.5",
    "esbuild-plugin-d.ts": "^1.1.0",
    "fastify": "^4.14.1",
    "nodemon": "^2.0.21",
    "vitest": "^0.29.2"
  },
  "dependencies": {}
}
